---
import Hero from "../components/Hero.astro";
import Testimonios from "../components/Testimonios.astro";
import Layout from "../layouts/Layout.astro";
import salesBg from "../assets/images/sales-mastery-background.webp";
import { Image } from "astro:assets";
import Pasos from "../components/Pasos.astro";
import Exito from "../components/Exito.astro";
import Objetivo from "../components/Objetivo.astro";
import Faqs from "../components/Faqs.astro";
import Footer from "../components/ui/Footer.astro";
import Modal from "../components/ui/Modal.astro";
---

<Layout>
  <div class="px-2 sm:px-0 relative">
    <img
      src="/images/sales-mastery-background.webp"
      alt="Sales Mastery Background"
      class="absolute top-0 left-1/2 -translate-x-1/2 w-auto min-w-[100vw] h-full min-h-[100%] z-[-10]"
    />
    <Hero />
    <Testimonios />
    <Pasos />
    <Exito />
  </div>
  <Objetivo />
  <Faqs />
  <Footer />
  <Modal />
</Layout>
