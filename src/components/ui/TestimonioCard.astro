---
export interface Props {
  videoId: string;
  title: string;
  description: string;
  name: string;
  details: string;
  videoPadding: string;
  isFirst?: boolean;
}

const {
  videoId,
  title,
  description,
  name,
  details,
  videoPadding,
  isFirst = false,
} = Astro.props;
---

<div
  class={`bg-black p-[2px] overflow-clip relative rounded-2xl ${!isFirst ? "mt-6 sm:mt-8" : ""}`}
>
  <div
    class="bgHardYellow -top-[100px] sm:-top-[175px] blur-2xl sm:blur-3xl left-[calc(50%-100px)] sm:left-[calc(50%-175px)] size-[200px] sm:size-[350px] rounded-full absolute"
  >
  </div>
  <div class="bg-black relative p-4 sm:p-8 md:p-[50px]">
    <div class="flex flex-col lg:flex-row gap-4 sm:gap-6 lg:gap-8">
      <div class="flex items-center w-full lg:w-auto">
        <div
          class="border border-white/20 w-full lg:min-w-[380px] lg:max-w-full aspect-video rounded-lg overflow-clip"
        >
          <div
            class="wistia_responsive_padding"
            style={`padding:${videoPadding} 0 0 0;position:relative;`}
          >
            <div
              class="wistia_responsive_wrapper"
              style="height:100%;left:0;position:absolute;top:0;width:100%;"
            >
              <iframe
                src={`https://fast.wistia.net/embed/iframe/${videoId}?web_component=true&seo=true`}
                title={`${name} - Video testimonial`}
                allow="autoplay; fullscreen"
                allowtransparency="true"
                frameborder="0"
                scrolling="no"
                class="wistia_embed"
                name="wistia_embed"
                width="100%"
                height="100%"></iframe>
            </div>
          </div>
        </div>
      </div>
      <div class="py-2 sm:py-4 lg:py-6 flex flex-col justify-between">
        <div>
          <h3
            class="font-bold text-white text-lg sm:text-xl md:text-[22px] leading-[120%]"
          >
            {title}
          </h3>
          <p
            class="text-white/80 mt-3 sm:mt-4 leading-[120%] text-sm sm:text-base"
          >
            {description}
          </p>
        </div>
        <div class="mt-6 sm:mt-8">
          <p class="text-white/80 text-sm sm:text-base">{name}</p>
          <p class="text-white/80 text-sm sm:text-base">{details}</p>
        </div>
      </div>
    </div>
  </div>
</div>
