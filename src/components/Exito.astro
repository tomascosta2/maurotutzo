---
import CustomButton from "./ui/CustomButton.astro";
import Title from "./ui/Title.astro";

const testimonials = [
  // Column 1
  [
    {
      image: "/images/chats/fernando-guerrero.webp",
      alt: "Fernando Guerrero - 7.000 usd en 2 meses",
      text: "7.000 usd en ",
      highlight: "2 meses",
    },
    {
      image: "/images/chats/mati-arroyo.webp",
      alt: "Mati Arroyo - 4.000 usd en 1 mes",
      text: "4.000 usd en ",
      highlight: "1 mes",
    },
    {
      image: "/images/chats/thiago-v.webp",
      alt: "Thiago V - 2.350 usd en su peor mes",
      text: "2.350 usd en ",
      highlight: "su peor mes",
    },
  ],
  // Column 2
  [
    {
      image: "/images/chats/juani-goupil.webp",
      alt: "Juani Goupil - 2.790 usd en 1 mes",
      text: "2.790 usd en ",
      highlight: "1 mes",
    },
    {
      image: "/images/chats/cruz-fernandez.webp",
      alt: "Cruz Fernandez - 6.400 usd en 1 mes",
      text: "6.400 usd en ",
      highlight: "1 mes",
    },
    {
      image: "/images/chats/fede-tubio.webp",
      alt: "Fede Tubio - 2.000 usd en 1 mes trabajando y estudiando",
      text: "2.000 usd en 1 mes ",
      highlight: "trabajando y estudiando al mismo tiempo",
    },
    {
      image: "/images/chats/camila-suarez.webp",
      alt: "Camila Suarez - 2.500 usd por mes trabajando solo 3hs por dia",
      text: "2.500 usd por mes ",
      highlight: "trabajando solo 3hs por dia",
    },
  ],
];
---

<section class="py-[100px] md:py-[120px]">
  <div class="max-w-[1020px] mx-auto px-4">
    <Title bg="TESTIMONIOS" text="Más" highlight="casos de éxito" />
    <div class="mt-6 sm:mt-8">
      <div
        class="flex flex-col md:flex-row justify-center items-start gap-4 sm:gap-5"
      >
        {
          testimonials.map((column, columnIndex) => (
            <div class="space-y-4 sm:space-y-6 w-full md:max-w-[372px]">
              {column.map((testimonial) => (
                <div class="bg-black rounded-2xl p-6 sm:p-8 md:p-10 md:pr-16 border border-white/20">
                  <img
                    src={testimonial.image}
                    alt={testimonial.alt}
                    class="w-full h-auto rounded-xl"
                    loading="lazy"
                  />
                  <div class="mt-3 sm:mt-4">
                    <p class="text-white text-base font-medium">
                      <span class="text-white">{testimonial.text}</span>
                      <span class="text-[#fbbf24]">
                        {testimonial.highlight}
                      </span>
                    </p>
                  </div>
                </div>
              ))}
            </div>
          ))
        }
      </div>
    </div>
    <CustomButton />
  </div>
</section>
